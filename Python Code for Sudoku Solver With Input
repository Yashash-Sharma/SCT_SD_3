# Function to print the Sudoku board
def print_board(board):
    for row in board:
        print(" ".join(str(num) if num != 0 else "." for num in row))
    print()

# Function to check if a number can be placed in a specific position
def is_valid(board, row, col, num):
    # Check if the number is in the current row or column
    for i in range(9):
        if board[row][i] == num or board[i][col] == num:
            return False
    
    # Check if the number is in the 3x3 grid
    start_row, start_col = 3 * (row // 3), 3 * (col // 3)
    for i in range(start_row, start_row + 3):
        for j in range(start_col, start_col + 3):
            if board[i][j] == num:
                return False
    
    return True

# Function to solve the Sudoku puzzle using backtracking
def solve_sudoku(board):
    for row in range(9):
        for col in range(9):
            if board[row][col] == 0:  # Find an empty cell
                for num in range(1, 10):  # Try each number from 1 to 9
                    if is_valid(board, row, col, num):
                        board[row][col] = num
                        if solve_sudoku(board):
                            return True  # Return True if solved
                        board[row][col] = 0  # Reset the cell if not solved
                return False  # Backtrack if no number fits
    return True

# Function to get the Sudoku grid input from the user
def get_user_input():
    board = []
    print("Enter each row of the Sudoku puzzle (use 0 for empty cells):")
    for i in range(9):
        row = input(f"Row {i+1}: ")
        # Convert the row into a list of integers
        row_values = [int(num) for num in row.split()]
        # Ensure the row has exactly 9 values
        if len(row_values) != 9:
            print("Each row must have exactly 9 numbers. Please try again.")
            return get_user_input()
        board.append(row_values)
    return board

# Main code to run the program
sudoku_board = get_user_input()
print("\nOriginal Sudoku Board:")
print_board(sudoku_board)

# Solve the Sudoku and print the result
if solve_sudoku(sudoku_board):
    print("Solved Sudoku Board:")
    print_board(sudoku_board)
else:
    print("No solution exists for the given Sudoku board.")
